@model EntityLayer.Concrete.Author

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">

    <div class="wrapper ">

        <section class="content">

            <div class="container-fluid">

                <div class="row">

                    <!-- /.col -->

                    <div class="col-md-12">

                        <div class="card mt-2 ">


                            <div class="card-body">

                                <div class="tab-content">



                                    <!-- /.tab-pane -->


                                    @using (Html.BeginForm("UpdateAuthor", "AuthorUser", FormMethod.Post, new { enctype = "multipart/form-data", @class = "col-8 pt-3 " }))
                                    {
                                        <input type="text" class="form-control" hidden id="inputName" name="AuthorID" value="@Model.AuthorID">
                                        <div class="form-group row">


                                            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad: </label>

                                            <div class="col-sm-10">

                                                <input type="text" class="form-control" id="inputName" name="AuthorName" value="@Model.AuthorName">

                                            </div>

                                        </div>

                                        <div class="form-group row">

                                            <label for="inputEmail" class="col-sm-2 col-form-label">Mail Adresi: </label>

                                            <div class="col-sm-10">

                                                <input type="email" class="form-control" id="inputEmail" name="AuthorMail" value="@Model.AuthorMail">

                                            </div>

                                        </div>

                                        <div class="form-group row">

                                            <label for="inputName2" class="col-sm-2 col-form-label">Meslek: </label>

                                            <div class="col-sm-10">

                                                <input type="text" class="form-control" id="inputName2" name="AuthorTitle" value="@Model.AuthorTitle">

                                            </div>

                                        </div>

                                        <div class="form-group row">

                                            <label for="inputExperience" class="col-sm-2 col-form-label">Hakkımda Kısa Bilgiler: </label>

                                            <div class="col-sm-10">

                                                <input type="text" class="form-control" id="inputName2" name="AboutShort" value="@Model.AboutShort">

                                            </div>

                                        </div>

                                        <div class="form-group row">

                                            <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda Detaylı Bilgiler: </label>

                                            <div class="col-sm-10">

                                                @Html.TextAreaFor(x => x.AuthorAbout, 5, 400, new { @class = "form-control" })

                                            </div>

                                        </div>

                                        <div class="form-group row">

                                            <label for="inputSkills" class="col-sm-2 col-form-label">Telefon: </label>

                                            <div class="col-sm-10">

                                                <input type="tel" class="form-control" id="inputSkills" name="AuthorPhoneNumber" value="@Model.AuthorPhoneNumber">

                                            </div>

                                        </div>

                                        <div class="form-group">

                                            <label class="col-sm-2 col-form-label my-auto">Resim: </label>
                                            
                                                <input type="file" id="inputName" name="AuthorImage">
                                                <img src="@Model.AuthorImage" class="d-inline-block" style="height:auto;width:30%" />

                                 

                                        </div>

                                        <div class="form-group row">

                                            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre: </label>

                                            <div class="col-sm-10">

                                                <input type="text" class="form-control" id="inputSkills" name="AuthorPassword" value="@Model.AuthorPassword">

                                            </div>

                                        </div>
                                           <div class="form-group row ">

                                            <div class="offset-sm-2 col-sm-10 text-center">

                                                <button type="submit" class="btn btn-danger w-75">Bilgilerimi Güncelle</button>

                                            </div>

                                        </div>

                                    }


                                    <!-- /.tab-pane -->

                                </div>

                                <!-- /.tab-content -->

                            </div><!-- /.card-body -->

                        </div>

                        <!-- /.nav-tabs-custom -->

                    </div>

                    <!-- /.col -->

                </div>

                <!-- /.row -->

            </div><!-- /.container-fluid -->

        </section>

        <!-- /.content -->

    </div>



</body>

</html>