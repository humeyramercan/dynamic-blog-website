@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewBag.Title = "GetCommentByBlog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
   <style>
       .fontBold {
           font-family: 'Martel', serif;
           font-weight: 800;
       }
   </style>
</head>
<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper pt-2">

        <section class="content">

            <div class="container-fluid">


                <h2 class="fontBold text-center p-1">Yorum Listesi</h2>
                <!-- Timelime example  -->
                @foreach (var item in Model)
                {
                    <div class="row">

                        <div class="col-md-12">

                            <!-- The time line -->

                            <div class="timeline">

                                <!-- timeline time label -->

                                <div class="time-label">

                                    <span class="bg-success">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>

                                </div>

                                <!-- /.timeline-label -->
                                <!-- timeline item -->

                                <div>

                                    <i class="fas fa-comment bg-yellow"></i>

                                    <div class="timeline-item">


                                        <h3 class="timeline-header"><a href="#">@item.UserName</a> @item.Mail</h3>

                                        <div class="timeline-body">

                                           @item.CommentText

                                        </div>

                                        @*<div class="timeline-footer">

                                            <a class="btn btn-primary btn-sm">Detaylar</a>

                                            <a class="btn btn-danger btn-sm">Kaldır</a>

                                        </div>*@

                                    </div>

                                </div>

                                <!-- END timeline item -->

                            </div>

                        </div>

                        <!-- /.col -->

                    </div>
                }

            </div>

            <!-- /.timeline -->

        </section>

        <!-- /.content -->

    </div>

    <!-- ./wrapper -->

</body>

</html>
