@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<style>
    .detailsButton {
        background-image: linear-gradient(to left bottom,rgba(169, 29, 197, 0.8),rgba(136, 134, 134, 0.2));
    }

    .updateButton {
        background-image: linear-gradient(to left bottom,rgba(59, 206, 29, 0.8),rgb(199, 230, 196));
    }

    .deleteButton {
        background-image: linear-gradient(to left bottom,rgba(243, 38, 11, 0.959),rgba(233, 126, 108, 0.678));
    }

    .commentsButton {
        background-image: linear-gradient(to left bottom,rgba(23, 103, 207, 0.959),rgba(222, 244, 255, 0.678));
    }

    .newBlogAddButton {
        background-image: linear-gradient(to left bottom,rgba(29, 179, 206, 0.8),rgb(151, 186, 224));
    }

    .fontBold {
        font-family: 'Martel', serif;
        font-weight: 800;
    }

    .fontNormal {
        font-family: 'Martel', serif;
        font-weight: 400;
    }

    .card-link {
        color: rgb(81, 193, 237);
        transition: all 0.2s
    }

        .card-link:hover {
            font-weight: bold;
        }
</style>

<h2 class="py-3 fontBold text-center">Yayında Olan Blog Kategorileri</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4">
            <div class="card  text-center" style="border-radius:20%;box-shadow:2px 4px 15px 2px rgb(227, 146, 25)">
                <img src="~/AdminLTE-3.0.4/dist/img/simplebg.jpg" class="card-img-top" alt="" style="border-radius:20%">
                <div class="card-img-overlay ">
                    <h3 class="card-header" style="color:darkslateblue">@item.CategoryName</h3>
                    <p class="card-text" style="color:darkblue">@item.CategoryDescription.Substring(0, item.CategoryDescription.Substring(0, 100).LastIndexOf(" "))...</p>
                    <a href="/Blog/AdminBlogListByCategory/@item.CategoryID" class="card-link ">Bloglara Git</a>

                </div>
            </div>
        </div>

    }
</div>

<div class="row text-center">
    <div class="col-4 mx-auto my-3">
        <a href="/Blog/AddNewBlog/" class="btn btn-primary newBlogAddButton p-2 w-100 ">Yeni Blog Ekle</a>
    </div>
</div>


