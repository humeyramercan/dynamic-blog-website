@using PagedList
@using PagedList.Mvc
@using EntityLayer.Concrete
@model IPagedList<Blog>
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <h2>Post Listesi</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {

<div class="col-lg-4 mb-4">
    <div class="entry2">
        <a href="/Blog/BlogDetails/@item.BlogID"><img src="@item.BlogCoverImage" alt="Image" style="height:250px" class="img-fluid rounded"></a>
        <div class="excerpt">
            <span class="post-category text-white bg-primary mb-3">@item.Category.CategoryName</span>

            <h2><a href="/Blog/BlogDetails/@item.BlogID">@item.BlogTitle</a></h2>
            <div class="post-meta align-items-center text-left clearfix">
                <figure class="author-figure mb-0 mr-3 float-left"><img src="@item.Author.AuthorImage" alt="Image" class="img-fluid"></figure>
                <span class="d-inline-block mt-1"><a href="#">@item.Author.AuthorName</a></span>
                <span>&nbsp;-&nbsp; @(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))</span>
                Puan: @item.BlogRating
            </div>
         
            <p><a href="/Blog/BlogDetails/@item.BlogID">Devamını oku</a></p>
        </div>
    </div>

</div>      }
        </div>
    </div>
</div>

@Html.PagedListPager(Model, page => Url.Action("Index","Blog", new { page}))