        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <div class="content">

                @RenderBody()
            </div>
            <!-- /.content -->
        </div>
