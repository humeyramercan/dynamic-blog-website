                        </li>

                        <li class="nav-item">
                            <a href="/Login/LogOut" class="nav-link">
                                <i class="fas fa-sign-out-alt" style="color:rgb(107, 3, 52)"></i>
                                <p>
                                    Çıkış Yap
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
