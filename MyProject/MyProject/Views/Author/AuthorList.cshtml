@using EntityLayer.Concrete
@model List<Author>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<!DOCTYPE html>
<style>
    .newBlogAddButton {
        background-image: linear-gradient(to left bottom,rgba(29, 179, 206, 0.8),rgb(151, 186, 224));
    }
    .fontBold {
        font-family: 'Martel', serif;
        font-weight: 800;
    }
</style>
<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <!-- Navbar -->
        <!-- Main content -->
        <h2 class="fontBold text-center pt-3">Yazar Listesi</h2>

        <section class="content">

            <!-- Default box -->

            <div class="card card-solid">

                <div class="card-body pb-0">

                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {

                            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">


                                <div class="card bg-light">

                                    <div class="card-header text-muted border-bottom-0">

                                        @item.AuthorTitle

                                    </div>

                                    <div class="card-body pt-0">

                                        <div class="row">

                                            <div class="col-7">

                                                <h2 class="lead"><b>@item.AuthorName</b></h2>

                                                <p class="text-muted text-sm"><b>Hakkında: </b> @item.AboutShort </p>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">

                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail: @item.AuthorMail</li>

                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon: +90 @item.AuthorPhoneNumber</li>

                                                </ul>

                                            </div>

                                            <div class="col-5 text-center">

                                                <img src="@item.AuthorImage" alt="" class="img-circle img-fluid">

                                            </div>

                                        </div>

                                    </div>

                                    <div class="card-footer">

                                        <div class="text-right">

                                            @*<a href="#" class="btn btn-sm bg-teal">

                                                <i class="fas fa-comments"></i> Yazarın Blogları

                                            </a>*@

                                            <a href="/Author/AuthorUpdate/@item.AuthorID" class="btn btn-sm btn-primary">

                                                <i class="fas fa-user"></i> Profili Düzenle

                                            </a>

                                        </div>

                                    </div>

                                </div>


                            </div>
                        }
                    </div>


                </div>

            </div>

            <!-- /.card -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.control-sidebar -->
    <div class="row text-center">
        <div class="col-4 mx-auto my-3">
            <a href="/Author/AddNewAuthor" class="btn btn-primary newBlogAddButton p-2 w-100 ">Yeni Yazar Ekle</a>
        </div>
    </div>
</body>

</html>

